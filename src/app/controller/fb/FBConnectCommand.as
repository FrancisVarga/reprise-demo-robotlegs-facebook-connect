package app.controller.fb{	import app.events.URIEvent;
	import app.models.fb.FBModel;	import app.events.fb.FBConnectEvent;
	import app.services.FacebookService;
	import org.robotlegs.mvcs.Command;
	/**	 * @author marco link (m.link@gmx.de)	 */	public class FBConnectCommand extends Command	{		/*******************************************************************************************		*								public properties										   *		*******************************************************************************************/		[Inject]		public var service : FacebookService;		[Inject]		public var event : FBConnectEvent;		[Inject]		public var model : FBModel;						/*******************************************************************************************		*								protected/ private properties							   *		*******************************************************************************************/						/*******************************************************************************************		*								public methods											   *		*******************************************************************************************/		public function FBConnectCommand()		{					}				override public function execute() : void		{			if(event.type == FBConnectEvent.FB_CONNECT)			{				service.login();			}			else if(event.type == FBConnectEvent.FB_VALIDATE_LOGIN)			{				service.validateLogin();			}			else if(event.type == FBConnectEvent.FB_CONNECT_SUCCESS)			{				model.setUserLoggedIn(true);				model.setUserData(service.getUserData());				dispatch(new URIEvent(URIEvent.CHANGE_URI, 'loggedIn'));			}		}						/*******************************************************************************************		*								protected/ private methods								   *		*******************************************************************************************/	}}