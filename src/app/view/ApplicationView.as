package app.view {	import com.facebook.data.users.FacebookUser;
	import reprise.controls.Label;	import app.view.login.LoginView;	import reprise.ui.UIComponent;	public class ApplicationView extends UIComponent	{		/*******************************************************************************************		*								public properties										   *		*******************************************************************************************/						/*******************************************************************************************		*								protected/ private properties							   *		*******************************************************************************************/		private var m_login : LoginView;		private var m_nameLabel : Label;
				/*******************************************************************************************		*								public methods											   *		*******************************************************************************************/		public function setUserData(data : FacebookUser) : void 		{			m_nameLabel.setLabel('Hello ' + data.first_name + ' ' + data.last_name);
		}				/*******************************************************************************************		*								protected/ private methods								   *		*******************************************************************************************/						override protected function createChildren() : void		{			m_login = LoginView(addComponent('display', 'loginView', LoginView));			m_nameLabel = Label(addComponent('nameLabel', 'nameLabel', Label));		}
	}}