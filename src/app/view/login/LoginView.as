package app.view.login {	import app.events.fb.FBConnectEvent;
	import flash.events.MouseEvent;	import reprise.controls.LabelButton;	import reprise.ui.UIComponent;	/**	 * @author marco link (m.link@gmx.de)	 */	 	public class LoginView extends UIComponent	{		/*******************************************************************************************		*								public properties										   *		*******************************************************************************************/						/*******************************************************************************************		*								protected/ private properties							   *		*******************************************************************************************/						/*******************************************************************************************		*								public methods											   *		*******************************************************************************************/						/*******************************************************************************************		*								protected/ private methods								   *		*******************************************************************************************/		override protected function createChildren() : void		{			var btn : LabelButton = LabelButton(addComponent('loginButton', null, LabelButton));			btn.setLabel('login');			btn.addEventListener(MouseEvent.CLICK, login_click);			btn = LabelButton(addComponent('validateButton', null, LabelButton));			btn.setLabel('validate');			btn.addEventListener(MouseEvent.CLICK, validate_click);		}		private function login_click(event : MouseEvent) : void 		{			dispatchEvent(new FBConnectEvent(FBConnectEvent.FB_CONNECT));
		}
		private function validate_click(event : MouseEvent) : void 		{			dispatchEvent(new FBConnectEvent(FBConnectEvent.FB_VALIDATE_LOGIN));
		}
	}}