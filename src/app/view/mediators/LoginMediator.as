package app.view.mediators{	import app.view.login.LoginView;	import app.events.fb.FBConnectEvent;	import org.robotlegs.mvcs.Mediator;	/**	 * @author marco link (m.link@gmx.de)	 */	public class LoginMediator extends Mediator	{		/*******************************************************************************************		*								public properties										   *		*******************************************************************************************/		[Inject]		public var view : LoginView;						/*******************************************************************************************		*								protected/ private properties							   *		*******************************************************************************************/						/*******************************************************************************************		*								public methods											   *		*******************************************************************************************/		public function LoginMediator()		{					}				override public function onRegister() : void		{			eventMap.mapListener(view, FBConnectEvent.FB_CONNECT, dispatch);			eventMap.mapListener(view, FBConnectEvent.FB_VALIDATE_LOGIN, dispatch);			eventMap.mapListener(eventDispatcher, FBConnectEvent.FB_CONNECT_SUCCESS, view.hide);		}						/*******************************************************************************************		*								protected/ private methods								   *		*******************************************************************************************/	}}